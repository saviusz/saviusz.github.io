---
import "../reset.scss";
import "../personal.scss";

export interface Props {
    title: string;
}

const { title } = Astro.props;
---

<html lang="pl">
    <head>
       
        <meta charset="utf-8" />
        <meta
            name="viewport"
            content="width=device-width"
        />
        <title>{title}</title>
    </head>
    <body>
        <slot />
    </body>
</html>
