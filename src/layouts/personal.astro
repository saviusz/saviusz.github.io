---
import "../reset.scss";
import "../personal.scss";

export interface Props {
    title: string;
}

const { title } = Astro.props;
---

<html lang="pl">
    <head>
        <link
            rel="preconnect"
            href="https://fonts.googleapis.com"
        />
        <link
            rel="preconnect"
            href="https://fonts.gstatic.com"
            crossorigin
        />
        <link
            href="https://fonts.googleapis.com/css2?family=Kalam:wght@300;400;700&family=Rubik+Doodle+Shadow&family=Zilla+Slab:ital,wght@0,300;0,400;0,500;0,600;0,700;1,300;1,400;1,500;1,600;1,700&display=swap"
            rel="stylesheet"
        />
        <meta charset="utf-8" />
        <meta
            name="viewport"
            content="width=device-width"
        />
        <title>{title}</title>
    </head>
    <body>
        <slot />
    </body>
</html>
